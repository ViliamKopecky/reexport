{
	"name": "reexport",
	"version": "1.3.1",
	"description": "Utility to automate reexporting TypeScript in `index.ts` files... and probably more.",
	"homepage": "https://github.com/ViliamKopecky/reexport",
	"main": "dist/main.js",
	"types": "dist/main.d.ts",
	"bin": {
		"reexport": "bin/reexport.js"
	},
	"scripts": {
		"build": "tsc",
		"check": "npm run check-types && npm run lint && npm run test",
		"check-types": "tsc --noEmit",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"test": "vitest run",
		"test:watch": "vitest",
		"ci": "npm run check && npm run build",
		"cli": "npx tsx ./src/cli.ts"
	},
	"author": "ViliamKopecky <vk@viliamkopecky.cz>",
	"license": "Apache-2.0",
	"dependencies": {
		"chokidar": "^3.5.3",
		"commander": "^10.0.0",
		"globby": "^13.1.3"
	},
	"devDependencies": {
		"@types/glob": "^8.1.0",
		"@types/node": "^18.14.6",
		"@typescript-eslint/eslint-plugin": "^5.54.0",
		"@typescript-eslint/parser": "^5.54.0",
		"eslint": "^8.35.0",
		"tsx": "^3.12.3",
		"typescript": "^4.9.5",
		"vitest": "^0.29.2"
	}
}
